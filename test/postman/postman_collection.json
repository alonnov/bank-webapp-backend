{
  "info": {
    "name": "Banking App API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Public",
      "item": [
        {
          "name": "Signup",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"{{TEST_EMAIL}}\",\n  \"password\": \"{{TEST_PASSWORD}}\",\n  \"first_name\": \"John\",\n  \"last_name\": \"Doe\",\n  \"birthday\": \"1990-01-01\",\n  \"phone\": \"+1234567890\"\n}"
            },
            "url": {
              "raw": "{{PUBLIC_BASE}}/signup",
              "host": ["{{PUBLIC_BASE}}"],
              "path": ["signup"]
            }
          },
          "response": []
        },
        {
          "name": "Login",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"{{TEST_EMAIL}}\",\n  \"password\": \"{{TEST_PASSWORD}}\"\n}"
            },
            "url": {
              "raw": "{{PUBLIC_BASE}}/login",
              "host": ["{{PUBLIC_BASE}}"],
              "path": ["login"]
            }
          },
          "response": []
        },
        {
          "name": "Send Verification Email",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"{{TEST_EMAIL}}\"\n}"
            },
            "url": {
              "raw": "{{PUBLIC_BASE}}/verify/send",
              "host": ["{{PUBLIC_BASE}}/verify"],
              "path": ["verify", "send"]
            }
          },
          "response": []
        },
        {
          "name": "Verify Email",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"{{TEST_EMAIL}}\",\n  \"code\": \"{{VERIFICATION_CODE}}\"\n}"
            },
            "url": {
              "raw": "{{PUBLIC_BASE}}/verify/verify",
              "host": ["{{PUBLIC_BASE}}/verify"],
              "path": ["verify"]
            }
          },
          "response": []
        }
      ]
    },
    {
      "name": "Auth",
      "item": [
        {
          "name": "Logout",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Authorization", "value": "Bearer {{ACCESS_TOKEN}}" }
            ],
            "url": {
              "raw": "{{AUTH_BASE}}/logout",
              "host": ["{{AUTH_BASE}}"],
              "path": ["logout"]
            }
          },
          "response": []
        },
        {
          "name": "Get Account Dashboard",
          "request": {
            "method": "GET",
            "header": [
              { "key": "Authorization", "value": "Bearer {{ACCESS_TOKEN}}" }
            ],
            "url": {
              "raw": "{{AUTH_BASE}}/account",
              "host": ["{{AUTH_BASE}}"],
              "path": ["account"]
            }
          },
          "response": []
        },
        {
          "name": "Get User Info",
          "request": {
            "method": "GET",
            "header": [
              { "key": "Authorization", "value": "Bearer {{ACCESS_TOKEN}}" }
            ],
            "url": {
              "raw": "{{AUTH_BASE}}/info",
              "host": ["{{AUTH_BASE}}"],
              "path": ["info"]
            }
          },
          "response": []
        },
        {
          "name": "Update User Info",
          "request": {
            "method": "PUT",
            "header": [
              { "key": "Authorization", "value": "Bearer {{ACCESS_TOKEN}}" },
              { "key": "Content-Type", "value": "application/json" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"first_name\": \"Jane\",\n  \"last_name\": \"Smith\",\n  \"birthday\": \"1985-06-15\",\n  \"phone\": \"+1987654321\"\n}"
            },
            "url": {
              "raw": "{{AUTH_BASE}}/info",
              "host": ["{{AUTH_BASE}}"],
              "path": ["info"]
            }
          },
          "response": []
        },
        {
          "name": "Change Email",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Authorization", "value": "Bearer {{ACCESS_TOKEN}}" },
              { "key": "Content-Type", "value": "application/json" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"currentPassword\": \"{{TEST_PASSWORD}}\",\n  \"newEmail\": \"newemail@example.com\"\n}"
            },
            "url": {
              "raw": "{{AUTH_BASE}}/security/change-email",
              "host": ["{{AUTH_BASE}}"],
              "path": ["security", "change-email"]
            }
          },
          "response": []
        },
        {
          "name": "Change Password",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Authorization", "value": "Bearer {{ACCESS_TOKEN}}" },
              { "key": "Content-Type", "value": "application/json" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"currentPassword\": \"{{TEST_PASSWORD}}\",\n  \"newPassword\": \"NewPassword123!\",\n  \"confirmPassword\": \"NewPassword123!\"\n}"
            },
            "url": {
              "raw": "{{AUTH_BASE}}/security/change-password",
              "host": ["{{AUTH_BASE}}"],
              "path": ["security", "change-password"]
            }
          },
          "response": []
        },
        {
          "name": "Create Transaction",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Authorization", "value": "Bearer {{ACCESS_TOKEN}}" },
              { "key": "Content-Type", "value": "application/json" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"recipient\": \"{{RECIPIENT_EMAIL}}\",\n  \"sum\": {{TRANSACTION_AMOUNT}},\n  \"message\": \"Payment for services\"\n}"
            },
            "url": {
              "raw": "{{AUTH_BASE}}/transactions",
              "host": ["{{AUTH_BASE}}"],
              "path": ["transactions"]
            }
          },
          "response": []
        },
        {
          "name": "Get Transaction History",
          "request": {
            "method": "GET",
            "header": [
              { "key": "Authorization", "value": "Bearer {{ACCESS_TOKEN}}" }
            ],
            "url": {
              "raw": "{{AUTH_BASE}}/transactions/history?page=1&limit=10",
              "host": ["{{AUTH_BASE}}"],
              "path": ["transactions", "history"],
              "query": [
                { "key": "page", "value": "1" },
                { "key": "limit", "value": "10" }
              ]
            }
          },
          "response": []
        },
        {
          "name": "Get Transaction by ID",
          "request": {
            "method": "GET",
            "header": [
              { "key": "Authorization", "value": "Bearer {{ACCESS_TOKEN}}" }
            ],
            "url": {
              "raw": "{{AUTH_BASE}}/transactions/{{TRANSACTION_ID}}",
              "host": ["{{AUTH_BASE}}"],
              "path": ["transactions", "{{TRANSACTION_ID}}"]
            }
          },
          "response": []
        }
      ]
    }
  ]
}
